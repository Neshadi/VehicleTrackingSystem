pipeline {
    agent any 
    
    stages { 
        stage('SCM Checkout') {
            steps {
                
                    url: 'https://github.com/Neshadi/VehicleTrackingSystem'
                
            }
        }
                stage('Build and Push Docker Images') {
            steps {  
                script {
                    def imageVersion = "${env.BUILD_NUMBER}"

                    // Build first image (server)
                    bat "docker build -t hirunika/server-image:${imageVersion} -f Dockerfile.server ."

                    // Build second image (client)
                    bat "docker build -t hirunika/client-image:${imageVersion} -f Dockerfile.client ."
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'samin-docker', variable: 'samindocker')]) {
                    script {
                        bat "docker login -u adomicarts -p %samindocker%"
                    }
                }
            }
        }
        stage('Push Image') {
            steps {
                bat 'docker push adomicarts/nodeapp-cuban:%BUILD_NUMBER%'
            }
        }
    }
    post {
        always {
            bat 'docker logout'
        }
    }
}