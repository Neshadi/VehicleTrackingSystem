pipeline {
    agent any 
    
    stages { 
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'master', url: 'https://github.com/Neshadi/VehicleTrackingSystem.git'
                }
            }
        }

        stage('Build and Push Docker Images') {
            steps {
                script {
                    sh "docker build -t hirunika/server-image -f Dockerfileserver ."
                    sh "docker build -t hirunika/client-image -f Dockerfileclient ."
                    sh "docker push hirunika/server-image"
                    sh "docker push hirunika/client-image"
                }
            }
        }

        stage('Deploy to EC2') {
            steps {
                sshagent(['ec2-key']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no ec2-user@your-ec2-ip << EOF
                    docker pull hirunika/client-image
                    docker pull hirunika/server-image
                    docker stop client server || true
                    docker rm client server || true
                    docker run -d -p 3000:3000 --name client hirunika/client-image
                    docker run -d -p 3001:3000 --name server hirunika/server-image
                    EOF
                    '''
                }
            }
        }
    }
}


