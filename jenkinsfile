pipeline {
    agent any 
    
    stages { 
             
        stage('SCM Checkout') {
            steps {
                // Corrected the SCM checkout syntax
                checkout scm: [
                    $class: 'GitSCM', 
                    branches: [[name: '*/master']], // Replace with your branch name if different
                    userRemoteConfigs: [[url: 'https://github.com/Neshadi/VehicleTrackingSystem.git']]
                ]
            }
        }
                stage('Build and Push Docker Images') {
            steps {  
                script {
                    def imageVersion = "${env.BUILD_NUMBER}"

                    // Build first image (server)
                    bat "docker build -t hirunika/server-image:${imageVersion} -f Dockerfile.server ."

                    // Build second image (client)
                    bat "docker build -t hirunika/client-image:${imageVersion} -f Dockerfile.client ."
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: '', variable: 'test-dockerpass')]) {
                    script {
                        bat "docker login -u hirunika -p %test-dockerpass%"
                    }
                }
            }
        }
        stage('Push Image') {
            steps {
                bat 'docker push hirunika/server-image:${imageVersion} && docker push hirunika/client-image:${imageVersion}'
            }
        }
    }
    post {
        always {
            bat 'docker logout'
        }
    }
}