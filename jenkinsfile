pipeline {
    agent any  // This will run the job on any available agent (master or EC2 node)
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from your GitHub repository
                git url: 'https://github.com/Neshadi/VehicleTrackingSystem.git', branch: 'master'
            }
        }
        
        stage('Build') {
            steps {
                // Example: Run build commands (like Maven or Gradle)
                sh 'mvn clean install' // Adjust for your project
            }
        }
        
        stage('Test') {
            steps {
                // Run tests (adjust for your testing framework)
                sh 'mvn test'  // Adjust for your testing framework
            }
        }
        
        stage('Deploy') {
            steps {
                // Example: Deployment step (adjust for your project)
                echo 'Deploying application...'
            }
        }
    }
    
    post {
        success {
            echo 'Build and deployment successful!'
        }
        failure {
            echo 'Build or deployment failed!'
        }
    }
}

