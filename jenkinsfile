pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat 'docker build -t Neshadi/server-image:latest .'
            }
        }
        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'docker-hub-credentials']) {
                    bat 'docker push Neshadi/server-image:latest'
                }
            }
        }
        stage('Deploy') {
            steps {
                bat 'docker pull Neshadi/server-image:latest'
                bat 'docker run -d -p 8080:8080 Neshadi/server-image'
            }
        }
    }
}
